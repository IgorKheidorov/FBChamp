@model Guid 
@{
     if (ViewBag.PanelType == "Update")
     {
        <a asp-action="Profile" asp-route-id="@Model" class="btn btn-outline-primary btn-sm" style="width: 32px;" title="Info">
            <i class="fas fa-info"></i>
        </a>
        <a asp-action="Update" asp-route-id="@Model" class="btn btn-outline-warning btn-sm" style="margin-left: 6px; width: 32px;" title="Update">
            <i class="fas fa-pencil-alt"></i>
        </a>
        <form asp-action="Delete" style="display: inline" >
            <input type="hidden" name="id" value="@Model" />
            <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Do you want to delete this item?')" style="margin: 2px; width: 32px;" title="Delete" type="submit">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
     }
     if (ViewBag.PanelType == "Unassign")
     {
        <a asp-action="@ViewBag.InfoAction" asp-route-id="@Model" class="btn btn-outline-primary btn-sm" style="width: 32px;" title="Info">
            <i class="fas fa-info"></i>
        </a>
        <form asp-action="@ViewBag.UnassignAction" style="display: inline">
            <input type="hidden" name="id" value="@Model" />
            <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Do you want to delete this item?')" style="margin: 2px; width: 32px;" title="Delete" type="submit">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
     }
     if (ViewBag.PanelType == "Assign")
     {
        <a asp-action="@ViewBag.Action" asp-route-id="@Model" asp-route-teamid="@ViewBag.TeamID" class="btn btn-outline-primary btn-sm" style="width: 32px;" title="Info">
            <i class="fas fa-plus"></i>
        </a>
     }
 }
