@{
    Layout = "_MasterLayout";
}
<div id="wrapper">
    <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
        <div class="container-fluid d-flex flex-column p-0">
            <a asp-action="List" asp-area="" asp-controller="Course" class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">
                    <span>Football</span>
                </div>
            </a>
            <ul class="navbar-nav text-light" id="accordionSidebar">
               @if (User.IsInRole("Admin"))  
                 { 
                    <li><hr class="sidebar-divider" /></li>
                    <li class="nav-item">
                        <nav-link asp-action="List" asp-area="Admin" asp-controller="Player" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Players</span>
                        </nav-link>
                    </li>
                    <li class="nav-item">
                        <nav-link asp-action="List" asp-area="Admin" asp-controller="Coach" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Coaches</span>
                        </nav-link>
                    </li>
                    <li class="nav-item">
                        <nav-link asp-action="List" asp-area="Admin" asp-controller="Team" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Teams</span>
                        </nav-link>
                    </li>
                 } 
            </ul>
            <div class="text-center d-none d-md-inline">
                <button class="btn rounded-circle border-0" id="sidebarToggle" title="Toggle" type="button"></button>
            </div>
        </div>
    </nav>
    <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
            <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar">
                <div class="container-fluid">
                    <button class="btn btn-link d-md-none rounded-circle me-3" id="sidebarToggleTop" title="Toggle" type="button">
                        <i class="fas fa-bars"></i>
                    </button>
                    <ul class="navbar-nav flex-nowrap ms-auto">
                        <li class="nav-item dropdown no-arrow">
                            <div class="nav-item dropdown no-arrow">
                                <a aria-expanded="false" class="dropdown-toggle nav-link" data-bs-toggle="dropdown" href="#">
                                    <span class="d-none d-lg-inline me-2 text-gray-600 small">@User?.Identity?.Name</span>
                                    <i class="fas fa-user fa-fw"></i>
                                </a>
                                <div class="dropdown-menu shadow dropdown-menu-end animated--grow-in">
                                    <a asp-action="Profile" asp-controller="Profile" class="dropdown-item">
                                        <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Profile
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a asp-action="Logout" asp-controller="Auth" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>&nbsp;Logout
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <footer class="bg-white sticky-footer">
            <div class="container my-auto">
                <div class="text-center my-auto copyright">
                    <span>Copyright © FBChamp @DateTime.Now.Year</span>
                </div>
            </div>
        </footer>
    </div>
    <a class="border rounded d-inline scroll-to-top" href="#page-top" title="To top">
        <i class="fas fa-angle-up"></i>
    </a>
</div>

@section Scripts
{
    @await RenderSectionAsync("Scripts", false)
}